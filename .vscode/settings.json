{
    "latex-workshop.latex.recipes": [
        {
            "name": "LateXcompilation",
            "tools": [
                "lualatex+bibtex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex+bibtex",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-bibtex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
    ],
    "grammarly.selectors": [
        {
            "language": "latex",
            "scheme": "file"
        }
    ]
}